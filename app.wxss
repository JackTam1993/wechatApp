/**app.wxss**/
@import 'styles/weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.marginBottom-10{
    margin-bottom: 10rpx;
}

.marginBottom-20{
    margin-bottom: 20rpx;
}


.marginBottom-50{
    margin-bottom: 100rpx;
}

.bottom-btn{
    position:absolute;
    bottom:0;
    left:0;
    width:100%;
    height:100rpx;
    background:#ff5858;
    color:#fff;
    border-radius:0;
    display: flex;
    align-items: center;
    justify-content: center;
    letter-spacing: 3rpx;
}